{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "sourceMap": true,
    "strict": true,
    "outDir": "../dist/electron",
    "rootDir": "../electron",
    "noEmitOnError": false,
    "typeRoots": ["../node_modules/@types"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["**/*"],
  "exclude": ["../node_modules", "../dist", "../release"]
}
